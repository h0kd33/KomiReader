<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:padding="0dp"
    tools:context="moe.komi.reader.board.BoardFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/threads_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgcolor"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/board_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/board_progress"
            style="@style/ImageProgress" />

        <TextView
            android:id="@+id/loading_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/board_progress"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="welcome"
            android:textSize="@dimen/abc_text_size_large_material" />

    </RelativeLayout>

    <!--
